<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Old_number"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/new_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Old_phone"
        app:layout_constraintTop_toBottomOf="@+id/Change_phone"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/New_phone"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="36dp"
        android:text="New Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/change_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Old_phone" />

    <TextView
        android:id="@+id/Old_phone"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="38dp"
        android:text="Old Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/New_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change_phone" />

    <TextView
        android:id="@+id/Change_phone"
        android:layout_width="238dp"
        android:layout_height="32dp"
        android:layout_marginTop="217dp"
        android:layout_marginBottom="482dp"
        android:text="Change Phone Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_number"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginBottom="254dp"
        android:onClick="savePhone"
        android:text="Change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/new_number"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/change_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/New_phone"
        app:layout_constraintTop_toBottomOf="@+id/Old_number"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="132dp"
        android:clickable="true"
        android:onClick="back3"
        app:layout_constraintBottom_toTopOf="@+id/Change_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>